#parse("/velocity/layout.vm")
#@mainLayout()
<nav class="top-nav">
	<div class="container">
  		<div class="nav-wrapper"><a class="page-title">Add $type</a></div>
    </div>
</nav>
<div class="container page-container">
	<div class="row">
		<form class="col s12">
			<p class="caption">Fill in the details of the data source you want to add.</p>
			<div class="row">
				<div class="input-field col s12">
					<input id="name" type="text" class="validate" autofocus required>
					<label for="name">Name</label>
			  	</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<input disabled value="$currentUser" id="author" type="text" class="validate">
					<label for="author">Author</label>
			  	</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<textarea id="description" class="materialize-textarea"></textarea>
					<label for="description">Description</label>
			  	</div>
			</div>
			<input class="btn" type="submit" value="Add">
	    </form>
	</div>
</div>
#end